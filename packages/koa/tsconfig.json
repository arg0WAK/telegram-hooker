{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": false,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
